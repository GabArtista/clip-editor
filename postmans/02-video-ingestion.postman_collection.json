{
  "info": {
    "name": "FALA - 02 Video Ingestion",
    "_postman_id": "00000000-0000-4000-8000-000000000003",
    "description": "Fluxo de ingestão de vídeos e consulta dos modelos de clipe sugeridos.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Submeter Vídeo",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"url\": \"https://www.instagram.com/reel/<id>/\",\n  \"music_id\": \"{{music_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/videos",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "videos"
          ]
        },
        "description": "Submeta o link do vídeo (reel) a ser analisado; informe opcionalmente um music_id existente."
      },
      "response": []
    },
    {
      "name": "Detalhar Vídeo",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/videos/{{video_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "videos",
            "{{video_id}}"
          ]
        },
        "description": "Recupere o status e as opções de clipe. Use o ID retornado na submissão."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8060",
      "type": "string"
    },
    {
      "key": "video_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "music_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ]
}
